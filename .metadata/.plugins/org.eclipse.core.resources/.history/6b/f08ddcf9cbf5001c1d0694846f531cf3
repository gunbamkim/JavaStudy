package java0627;

import java.util.Scanner;

public class ex05다이어트관리프로그램 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int now = 0;
		int target = 0; 
		int cnt =0;
		int cut = 0;
		
		System.out.println("현재몸무게 : ");
		now = sc.nextInt();
		System.out.println("목표몸무게:");
		target = sc.nextInt();
		
		
		while(target<now) {
			System.out.println(cnt + "주차 감량 몸무게: ");
			cnt++;
			cut =sc.nextInt();
			now = now - cut;
			
			
			
		}
	}

}
